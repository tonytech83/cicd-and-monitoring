Vagrant.configure("2") do |config|
  config.vm.box = "shekeriev/ubuntu-24.04"
  config.vm.box_version = "24.04.3.20260201"
  
  config.vm.define "docker" do |docker|
    docker.vm.hostname = "docker.homework.lab"
    docker.vm.network "private_network", ip: "192.168.99.101"
    docker.vm.synced_folder "vagrant/", "/vagrant"
    docker.vm.provision "shell", path: "scripts/install-prerequisites.sh"
    docker.vm.provision "shell", path: "scripts/install-docker.sh"
    docker.vm.provision "shell", path: "scripts/install-docker-registry.sh"
    docker.vm.provision "shell", path: "scripts/install-gitea.sh"
    docker.vm.provision "shell", path: "scripts/setup-gitea.sh"
    docker.vm.provider "virtualbox" do |vbox|
      vbox.name = "M3-Docker"
      vbox.cpus = 2
      vbox.memory = 4096
    end
  end

end